{
  "extends": "@acme/tsconfig/base.json",
  "compilerOptions": {
    "lib": [
      "ES2022",
      "dom",
      "dom.iterable"
    ],
    "jsx": "preserve",
    "jsxImportSource": "nativewind",
    "esModuleInterop": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/ui/*": [
        "./src/components/ui/*"
      ],
      "@/*": [
        "./src/*"
      ],
      "~/*": [
        "./src/*"
      ],
      "@acme/ui/*": [
        "../../packages/ui/src/*"
      ],
      // "@acme/tamagui/*": ["../../packages/tamagui/src/*"],
      "react-native": [
        "react-native-web"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "module": "esnext"
  },
  "include": [
    ".storybook/**/*",
    "*.ts",
    "*.js",
    "./src/**/*",
    ".next/types/**/*.ts",
    "tamagui.config.ts",
    "../../packages/ui/src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
